

<h2 class="text-center login-text">RubyHRM</h2>

<div class="login-panel panel panel-default top30">
	<div class="panel-heading">
		<h3 class="panel-title"><%= t('login.header') %></h3>
	</div>
	<div class="panel-body">
		<%= form_for(:session, url: login_path, :html => {:class => 'form-signin' }) do |f| %>
			<fieldset>
				<div class="form-group">
					<%= f.text_field :username, :class => 'form-control', :placeholder => t('login.username') %>
				</div>
				<div class="form-group">
					<%= f.password_field :password, :class => 'form-control', :placeholder => t('login.password') %>
				</div>
				<div class="checkbox">
					<label>
						<%= check_box_tag :remember_me, 1, params[:remember_me] %> <%= t('login.rememberme') %>
					</label>
				</div>
				<%= f.submit t('login.login'), :class => 'btn btn-success btn-block' %><br/>
				<p><%= link_to t('login.forgotpassword'), new_password_reset_path %></p>
			</fieldset>
		<% end %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		Demo Login Details
	</div>
	<div class="panel-body">
		<p>Login: Administrator</p>
		<p>Password: password</p>
	</div>
</div>

